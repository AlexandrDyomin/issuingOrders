mixin button(text="") 
    button.custom-button(type="button")&attributes(attributes)=text

style. 
    .custom-button {
        min-width: max-content;
        background: black;
        padding: 2rem;
        color: white;
        text-transform: uppercase;
        font-size: 2rem;
        letter-spacing: 2px;
        border-radius: 0 0 1rem 1rem;
        box-shadow: 0 10px 2px 0 rgba(0, 0, 0, 0.25);
        transition: background .3s linear, color .5s linear;
    }

    .custom-button:focus,
    .custom-button:hover {
        background: white;
        color: rgba(80, 0, 251, 0.7);
    }