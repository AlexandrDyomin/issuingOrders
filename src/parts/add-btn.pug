mixin add-btn 
    button.add-btn(type="button")&attributes(attributes)
        <svg class="add-btn__img" width="20" height="20" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2 12.5H23" stroke="#5000FB" stroke-opacity="0.7" stroke-width="3" stroke-linecap="round"/>
            <path d="M12.5 23L12.5 2" stroke="#5000FB" stroke-opacity="0.7" stroke-width="3" stroke-linecap="round"/>
        </svg>

style. 
    .add-btn {
        width:max-content;
        padding: 2px;
        border-radius: 3px;
        transition: background .3s linear;
    }

    .add-btn:focus,
    .add-btn:hover {
        background: #45464c30;
    }
    
    .add-btn__img {
        vertical-align: middle;
    }