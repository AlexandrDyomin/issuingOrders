mixin plate 
    .plate&attributes(attributes)
        block

style. 
    .plate {
        border-style : solid;
        border-top-width: 1rem;
        border-left-width: 0;
        border-right-width: 0;
        border-bottom-width: 0;
        border-radius: 0 0 1rem 1rem;
        border-top-color: rgba(80, 0, 251, 0.7);
        padding: 2.5rem;
        padding-top: 1.5rem;
        box-shadow: 0 10px 2px 0 rgba(0, 0, 0, 0.25);
        background: white;
    }