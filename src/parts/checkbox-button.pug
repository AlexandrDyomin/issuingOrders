mixin checkbox-button(text)
    label.checkbox
        input.checkbox__item(type="checkbox")&attributes(attributes)
        span.checkbox__style
        span.checkbox__text=text
    
style. 
    .checkbox {
        display: flex;
        align-items:center;
        min-width: max-content;
        font-size: 1.4rem;
        line-height: 2.4rem;
        padding: 0 1rem 1.2rem 2.1rem;
    }

    .checkbox__item {
        width: 1px;
        height: 1px;
        position: absolute;
        clip: rect(0 0 0 0);
        overflow: hidden;
    }

    .checkbox__item:checked + .checkbox__style::before {
        content: "";
        width: 0.6rem;
        height: 1.5rem;
        position: absolute;
        top: -0.5rem;
        border-bottom: 0.2rem solid transparent;
        border-right: 0.2rem solid transparent;
        transform-origin: right bottom;
        transform: rotate(45deg);
        border-image: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);
        border-image-slice: 1;
    }

    .checkbox__item:checked + .checkbox__style {
        border: 1px solid #BC9CFF;
    }

    .checkbox__item:focus-visible ~ .checkbox__text {
        box-shadow: 0px 4px 2px -2px rgba(80, 0, 251, 0.4);
    }
    
    .checkbox__style {
        position: absolute; 
        width: 1.4rem;
        height: 1.4rem;
        border: 1px solid rgba(31, 32, 65, 0.25);
        border-radius: 0.4rem;
        margin-right: 1rem;
        margin-left: -2.1rem;
    }

    .checkbox__text {
        padding: 0 0.5rem;
        border-radius: 0.5rem;
    }